@model CaleBlog.WebUI.Models.HomeViewModel

@{
    ViewBag.Title = Model.HomePost.Title;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.HomePost.Title</h3>
    </div>
    <div class="panel-body">
        @Model.HomePost.Body
    </div>

    <div class="panel-footer">
        <div class="list-group">
            <div class="list-group-item-heading">
                Previous Posts:
            </div>
            @foreach (var post in Model.RecentPosts)
            {
                @Html.ActionLink(post.Title, "View", new { post.PostID }, new { @class = "list-group-item" })
            }
        </div>

        @Html.ActionLink("Full List of Posts", "List", null, new { @class = "btn btn-default" })
    </div>
</div>

