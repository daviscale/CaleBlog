@using CaleBlog.Domain.Entities;

@model CaleBlog.WebUI.Models.PostListViewModel

@{
    ViewBag.Title = "Posts";
}


<div class="panel panel-default">
<table class="table table-striped table-bordered">
    <tr>
        <th class="text-left">Title</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var post in Model.Posts) {
        <tr>
            <td class="text-left">@post.Title</td>
            <td>@Html.ActionLink("Edit", "Edit", new { post.PostID })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { post.PostID })</td>
        </tr>
    }
</table>
</div>

<div>
    @Html.PageLinks(Model.PagingInfo, pg => Url.Action("List", new { page = pg}))
</div>